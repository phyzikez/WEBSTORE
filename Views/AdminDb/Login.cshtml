@model WebApplication117.Models.LoginModel

<div class="log about">
    <form asp-controller="AdminDb" asp-action="Index" method="post">

        <h1>Log In</h1>
        <p>Please fill in this form to login.</p>
        <hr>

        <label asp-for="UserLogin"><b>User Login:</b></label>
        <input type="text" placeholder="Login" asp-for="UserLogin">

        <label asp-for="UserPassword"><b>User Password</b></label>
        <input type="password" placeholder="Password" asp-for="UserPassword">

        <div class="clearfix">
            <button type="button" class="cancelbtn">Cancel</button>
            <button type="submit" class="signupbtn">Log In</button>
        </div>

        <h4>@ViewBag.Msg</h4>
    </form>
</div>