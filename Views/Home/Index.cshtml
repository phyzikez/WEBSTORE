@model IEnumerable<WebApplication117.Models.ProductModel>

@{
    ViewData["Title"] = "Home Page";
}
<h1>WELCOME TO OUR WEBSTORE</h1>
@* Show currently logined user (should use this info e.g. to show block of previously viewed products)
(Class Logger write users visits into log file than this info is eliminated)*@
@if (ViewBag.clogin != null) {
    <h3>User [@ViewBag.clogin]</h3>
}
<hr class="line" />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">

    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@i"></li>
            }
        }
    </ol>


    <div class="carousel-inner" role="listbox">
        @{int N = 0; }
        @foreach (var pr in Model)
        {
            if (N++ == 0)
            {
                <div class="item active">
                    <img src="/images/@pr.MainPhoto" alt="hot" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            @pr.Brand @pr.ModelName
                            <a class="btn btn-default" asp-controller="ProductDB" asp-action="Details" asp-route-id="@pr.Id">
                                Look at
                            </a>
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <img src="/images/@pr.MainPhoto" alt="hot" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <p>
                            @pr.Brand @pr.ModelName
                            <a class="btn btn-default" asp-controller="ProductDB" asp-action="Details" asp-route-id="@pr.Id">
                                Look at
                            </a>
                        </p>
                    </div>
                </div>
            }
        }
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row-3">
    <div class="column-3 desc">
        <h2>BEST QUALITY</h2>
        <img src="/images/quality.png" width="200" alt="Quality" />
    </div>
    <div class="column-3 desc">
        <h2>SKILLFUL TEAM</h2>
        <img src="/images/team.png" width="200" alt="Team" />
    </div>
    <div class="column-3 desc">
        <h2>GLOBAL NETWORK</h2>
        <ul style="list-style-type: none;">
            <li><h4>&#9055; Increase our delivery speed</h4></li>
            <li><h4>&#9055; Satisfied clients</h4></li>
            <li><h4>&#9055; Best partners</h4></li>
        </ul>
    </div>
</div>
